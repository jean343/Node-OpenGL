{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist"
    },
    "filesGlob": [
        "**/*.ts",
        "!node_modules/**/*.ts"
    ],
    "files": [
        "dist/examples/a.d.ts",
        "dist/index.d.ts",
        "dist/lib/GL.d.ts",
        "examples/a.ts",
        "index.ts",
        "lib/GfxTexture.ts",
        "lib/Graphics.ts",
        "typings/node/node.d.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
